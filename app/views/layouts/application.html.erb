<!DOCTYPE html>
<html>
  <head>
    <title>SuitsMe</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
      <header>
       <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand header-logo" href="/">
            <span>SuitsMe</span>
          <link rel="preconnect" href="https://fonts.googleapis.com">
          <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
          <link href="https://fonts.googleapis.com/css2?family=Lobster&display=swap" rel="stylesheet">
          <%= stylesheet_link_tag "application.css", media: "all", 'data-turbolinks-track': "reload" %>
          </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if customer_signed_in? %>
               <li class="nav-item">
                 <%= link_to "マイページ", customers_my_page_path, class:'nav-link text-light' %>
               </li>
               <li class="nav-item">
                 <%= link_to "商品一覧", items_path, class:'nav-link text-light' %>
               </li>
               <li class="nav-item">
                 <%= link_to "カート", cart_items_path, class:'nav-link text-light' %>
               </li>
               <li>
                 <%= link_to '投稿フォーム', post_images_path, class:'nav-link text-light'%>
               </li>
               <li class="nav-item">
                 <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class:'nav-link text-light' %>
               </li>
              <% elsif admin_signed_in? %>
                <li class="nav-item">
                 <%= link_to "商品一覧", admin_items_path, class:'nav-link text-light' %>
               </li>
                <li class="nav-item">
                 <%= link_to "会員一覧", admin_customers_path, class:'nav-link text-light' %>
               </li>
                <li class="nav-item">
                 <%= link_to "注文履歴一覧", admin_path, class:'nav-link text-light' %>
               </li>
               <li class="nav-item">
                 <%= link_to "ジャンル一覧", admin_genres_path, class:'nav-link text-light' %>
               </li>
                <li>
                  <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'nav-link text-light' %>
                </li>
              <% else %>
                <li>
                  <%= link_to "新規登録", new_customer_registration_path, class: 'nav-link text-light' %>
                </li>
                <li>
                  <%= link_to "ログイン", new_customer_session_path, class: 'nav-link text-light' %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main class="mb-auto">
    <% flash.each do |name, msg| %>
     <p class="alert alert-<%= bootstrap_class_for(name) %>" >
       <%= msg %>
     </p>
    <% end %>
    <%= yield %>
    </main>
    <footer>
    <footer class="bg-dark text-white pt-5 pb-4">
      <div class="container">
        <!--<div class="row">-->
        <!--  <div class="col-md-4">-->
        <!--  </div>-->
        <!--  <div class="col-md-8">-->
            <!--<ul class="p-0 list-unstyled">-->
            <% if customer_signed_in? %>
             <div class="text-left">
              <%= link_to "ホーム", post_images_path, class:"btn btn-sm btn-light" %>
             </div>

             <div class="text-center">
              <%= link_to "+", new_post_image_path, class:"btn btn-sm btn-light" %>
             </div>

            <% end %>
            <!--</ul>-->
        <!--  </div>-->
        <!--</div>-->
      </div>
    </footer>
  </body>
</html>

