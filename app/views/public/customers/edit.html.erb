<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-9 px-5 px-sm-0 mx-auto">
      <section class="inner">
        <% if @customer.errors.any? %>
          <%= @customer.errors.count %>件のエラーが発生しました
          <ul>
            <% @customer.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
        <%= form_with model: @customer, url: customers_information_path, method: :patch do |f| %>
          <h3>会員情報編集</h3>
    　　　　  <table class="table">
    　　　　   <tbody>
    　　　　    <tr>
    　　　　      <td>氏名</td>
    　　　　      <td><%= f.text_field :first_name %></td>
    　　　　      <td><%= f.text_field :last_name %></td>
    　　　　    </tr>
    　　　　    <tr>
    　　　　      <td>フリガナ</td>
    　　　　      <td><%= f.text_field :first_name_kana%></td>
    　　　　      <td><%= f.text_field :last_name_kana %></td>
    　　　　    </tr>
    　　　　    <tr>
    　　　　      <td>郵便番号</td>
    　　　　      <td><%= f.text_field :postal_code %></td>
    　　　　      <td></td>
    　　　　    </tr>
    　　　　    <tr>
    　　　　      <td>住所</td>
    　　　　      <td colspan="2"><%= f.text_field :address,size: "60" %></td>
    　　　　    </tr>
    　　　　    <tr>
    　　　　      <td>電話番号</td>
    　　　　      <td><%= f.text_field :telephone_number %></td>
    　　　　      <td></td>
    　　　　    </tr>
    　　　　    <tr>
    　　　　      <td>メールアドレス</td>
    　　　　      <td><%= f.text_field :email %></td>
    　　　　      <td></td>
    　　　　    </tr>
    　　　　    <tr>
    　　　　      <td>ユーザーネーム</td>
    　　　　      <td><%= f.text_field :username %></td>
    　　　　      <td></td>
    　　　　    </tr>
    　　　　    <tr>
    　　　　      <td></td>
    　　　　      <td><%= f.submit "編集内容を保存",class:"btn btn-dark" %></td>
    　　　　      <td></td>
    　　　　      <td><%= link_to "退会する",customers_unsubscribe_path ,class:"btn btn-danger" %></td>
    　　　　    </tr>
    　　　　   </tbody>
    　　　　  </table>
        <% end %>
      </section>
    </div>
  </div>
</div>
