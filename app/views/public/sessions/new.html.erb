<div class = "container">
  <div class = "row">
   <div class = "col-md-4"></div>
    <div class="col-md-8">
     <section class="inner">
       <h2 class="section-ttl">Log in</h2>

       <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
         <div class="field">
          <%= f.label :メールアドレス %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email",size: "30" %>
         </div>

         <div class="field">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, autocomplete: "current-password",size: "30"  %>
         </div>

          <div class="actions pt-4">
          <%= f.submit "ログイン",class:"btn btn-info" %>
          </div>
       <% end %>
      </section>
     </div>
    </div>
  </div>
 </div>
