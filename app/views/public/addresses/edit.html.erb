<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-9 px-5 px-sm-0 mx-auto">
      <section class="inner">
        <%= form_with model: @address, url: address_path, method: :patch do |f| %>
          <h3>配送先編集</h3>
      　　　　  <table class="table">
      　　　　   <tbody>
      　　　　    <tr>
      　　　　      <td>郵便番号（ハイフンなし)</td>
      　　　　      <td><%= f.text_field :postal_code %></td>
      　　　　      <td></td>
      　　　　    </tr>
      　　　　    <tr>
      　　　　      <td>住所</td>
      　　　　      <td colspan="2"><%= f.text_field :address,size: "60" %></td>
      　　　　    </tr>
      　　　　    <tr>
      　　　　      <td>宛名</td>
      　　　　      <td><%= f.text_field :name %></td>
      　　　　      <td><%= f.submit "変更内容を保存",class:"btn btn-success" %></td>
      　　　　    </tr>
      　　　　   </tbody>
      　　　　  </table>
  　　　　<% end %>
      </section>
　　</div>
　</div>
</div>