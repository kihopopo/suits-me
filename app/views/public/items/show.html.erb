<div class = "container">
 <div class = "row">
   <div class = "col-lg-4">
     <h4>商品詳細</h4>
   </div>
     <div class="col-lg-8">
      <table class="table">
       <tbody>
        <tr>
          <td><%= @item.name %></td>
      　</tr>
      　<tr>
      　  <td><%= @item.introduction %></td>
      　</tr>
      　<tr>
      　  <td>¥<%= @item.add_tax_price.to_s(:delimited) %>(税込)</td>
      　</tr>
      　<tr>
      　  <td>
      　    <%= form_with model: @cart_item, url: '/cart_items', method: :post do |f| %>
      　    <%= f.hidden_field :item_id, :value => @item.id %>
      　   <%= f.select :amount, *[1..10] , {include_blank: '個数選択'} %>
      　   <%= f.submit 'カートに入れる', class:"btn btn-sm btn-success"  %>
  
      　   <% end %>
      　  </td>
      　</tr>
      </tbody>
     </table>
    </div>
 </div>
</div>