<div class = "container">
 <div class = "row">
   <div class = "col-lg-4">
     <h4>商品詳細</h4>
     <%= image_tag @item.get_image(300,300) %>
   </div>
     <div class="col-lg-8">
      <table class="table">
       <tbody>
        <tr>
          <td><%= @item.name %></td>
      　</tr>
      　<tr>
      　  <td><%= @item.introduction %></td>
      　</tr>
      　<tr>
      　  <td>¥<%= @item.add_tax_price.to_s(:delimited) %>(税込)</td>
      　</tr>
      　<tr>
      　  <td>
      　    <%= form_with model: @cart_item, url: '/cart_items', method: :post do |f| %>
      　    <%= f.hidden_field :item_id, :value => @item.id %>
      　   <%= f.select :amount, *[1..10] , {include_blank: '個数選択'} %>
      　   <%= f.submit 'カートに入れる', class:"btn btn-sm btn-success"  %>

      　   <% end %>
      　  </td>
      　</tr>
      </tbody>
     </table>
    </div>
    <div class = "col-lg-12" >
     <%= render 'rate_average' %>
        <div class="comment-container">
          <% @comments.each do |c| %>
            <div class="pt-2 px-2" style="background-color: #fffffe; border: 2px solid #272343; border-radius: 2px;">
                <div class="review-rating" data-score="<%= c.rate %>">評価：<%= c.rate %></div>

                <div class="text-left">
                    <p>投稿者：<%= c.customer.username %></p>
                    <p><%= c.content %></p>
                </div>

                <div class="text-right">
                    <p>投稿日：<%= c.created_at.strftime('%Y/%m/%d') %></p>
                </div>

                <!--<div class="text-right">-->
                <!--    <#% if c.customer == current_customer %>-->
                <!--    <%#=link_to item_path(@item.id), method: :delete, "data-confirm" => "Are you sure?", class:"btn btn-sm btn-danger" do %>-->
                <!--     Destroy-->
                <!--    <#%end%>-->
                <!--    <#%end%>-->
                <!--</div>-->

            </div>

            <div class="pb-2"></div>

          <% end %>

          <%= form_with(model: [@item, @comment], local: true) do |f| %>

            <%= f.text_area :content, rows:'5', placeholder: "コメント", class: "form-control form-control-sm" %>
            <div id="rating-form">
                <label>評価：</label>
                <%= f.hidden_field :rate, :value => 'score' %>
            </div>

            <%= f.submit "投稿する" %>
          <% end %>
        </div>

        <script>
            $('#rating-form').raty({
                starOn: "<%= asset_path('star-on.png') %>",
                starOff: "<%= asset_path('star-off.png') %>",
                scoreName: 'comment[rate]'
            });
        </script>
    </div>
 </div>
</div>
