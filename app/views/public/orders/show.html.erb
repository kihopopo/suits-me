<div class = "text-center">
<h3 class = "mt-4">注文情報詳細</h3>
</div>
<div class = "container">
 <div class = "row">
   <div class = "col-md-8">
    <section class="inner">
    <strong>注文情報</strong>
     <table class="table">
      <tr>
        <td>注文日</td>
        <td><%= @order[:created_at].strftime("%Y/%m/%d") %></td>
      </tr>
      <tr>
        <td>配送先</td>
        <td><div>〒<%= @order.postal_code %>
                 <%= @order.address %></div>
             <div><%= @order.name %></div></td>
      </tr>
      <tr>
        <td>支払方法</td>
        <td><%= @order.payment_method_i18n %></td>
      </tr>
      <tr>
        <td>ステータス</td>
        <td><%= @order.status_i18n %></td>
      </tr>
     </table>
    </section>
   </div>

   <div class = "col-md-4">
    <section class="inner">
    <strong>請求情報</strong>
     <table class="table">
      <tr>
        <td>商品合計</td>
        <td><%= @order.total.to_s(:delimited) %></td>
      </tr>
      <tr>
        <td>配送料</td>
        <td><%= @order.shipping_cost.to_s(:delimited) %></td>
      </tr>
      <tr>
        <td><strong>ご請求額</strong></td>
        <td> <%= @order.total_payment.to_s(:delimited) %></td>
      </tr>
     </table>
   </div>
  </div>
 </section>

  <div class = "row">
    <table class="table table-hover table-inverse">
      <thead>
        <tr class="table-secondary">
          <th>商品　</th>
          <th>単価(税込) </th>
          <th>個数</th>
          <th>小計</th>
        </tr>
        <% @order.order_details.each do |order_detail| %>
        <tr>
          <td>
            <%= order_detail.item.name %>
          </td>
          <td>
            <%= order_detail.item.add_tax_price.to_s(:delimited) %>
          </td>
          <td>
           <%= order_detail.amount %>
          </td>
          <td>
           <%= order_detail.item.add_tax_price.to_s(:delimited)*order_detail.amount %>
          </td>
          </tr>
         <% end %>
       </thead>
    </table>
  </div>
</div>