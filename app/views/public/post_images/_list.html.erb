<div class="container">
 <div class = "row">
  <% post_images.each do |post_image| %>
     <div class = "col-md-3">
       <div class = "card">
        <div class = "card-body">
          <%= link_to post_image_path(post_image.id) do %>
            <%= image_tag post_image.get_image(100,100), class:"card-img-top"; %>
          <% end %>
        </div>
        <div class="col-14">
          <p class="card-title">
            <%= link_to(post_image_path(post_image.id), class:"text-dark") do %>
              <strong><i class="far fa-flag"></i><span> <%= post_image.shop_name %></span></strong>
            <% end %>
          </p>
          <p class="card-text">アイテム名：<%= post_image.name %></p>
           <p class="card-text">税込価格：<%= post_image.price %>円</p>
          <p class="card-text">説明：<%= post_image.caption %></p>
          <span><i class="fas fa-user"></i> By <%= post_image.customer.username %> ｜ </span>
          <span><%= link_to "#{post_image.post_comments.count} コメント", post_image_path(post_image.id), class:"text-dark" %></span>
        </div>
      </div>
    </div>
   <% end %>
  </div>
</div>