<div class="container">
  <h2>投稿一覧</h2>
  <hr>
    <div class = "row">
     <% @post_images.each do |post_image| %>
      <div class="col-12 col-md-6 col-lg-3">
        <div class = "card">
          <div class = "card-body">
            <%= link_to post_image_path(post_image.id) do %>
              <%= image_tag post_image.get_image(100,100), class:"card-img-top"; %>
            <% end %>
          </div>
          <div class="col-14">
            <p class="card-title">
            <%= post_image.name %>
            </p>
            <p class="card-text"><%= post_image.price %>円</p>
            <p class="card-text"><%= post_image.caption %></p>
            <span><i class="fas fa-user"></i> By <%= post_image.customer.username %> ｜ </span>
            <span><%= link_to "#{post_image.post_comments.count} コメント", post_image_path(post_image.id), class:"text-dark" %></span>
          </div>
        </div>
      </div>
     <% end %>
    </div>
  <%= paginate @post_images %>
</div>
