<div class="container">
  <div class="row">
    <div class="col-md-10 px-sm-0 mx-auto">
    <h4>注文履歴一覧</h4>
     <table class="table table-hover table-inverse">
    　 <thead>
        <tr class="table-secondary">
          <th>購入日時</th>
          <th>購入者 </th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
        <% @orders.each do |order| %>
          <tr>
           <td>
            <%= link_to order[:created_at].strftime("%Y/%m/%d %H:%M:%S"), admin_order_path(order), data: {"turbolinks"=>false} %>
           </td>
            <td>
            <%= order.customer.full_name %>
            </td>
            <td>
            <%= order.order_details.sum(:amount) %>
            </td>
            <td>
            <%= order.status_i18n %>
            </td>
           </tr>
          </thead>
           <%end%>
        </table>
    </div>
  </div>
 <%= paginate @orders %>
</div>