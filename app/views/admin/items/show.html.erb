 <div class = "container">
     <div class = "row">
         <div class = "col-lg-4">
             <h4>商品詳細</h4>
             <%= image_tag @item.get_image(300,300) %>
         </div>


       <div class="col-lg-8">
         <table class="table">
          <tbody>
           <tr>
            <td>商品名</td>
            <td><%= @item.name %></td>
    　      </tr>
    　      <tr>
    　       <td>商品説明</td>
    　      <td><%= @item.introduction %></td>
    　     </tr>
    　      <tr>
    　       <td>ジャンル</td>
    　       <td><%= @item.genre.name %></td>
    　     </tr>
    　      <tr>
    　       <td>税込価格
    　         （税抜価格）</td>
    　       <td><%= @item.add_tax_price.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</td>
    　     </tr>
    　      <tr>
    　        <td>販売ステータス</td>
    　        <td>
    　         <% if @item.is_active? %>
         						<span class="text-active">販売中</span>
         					<% else %>
         						<span class="text-invalid">販売停止中</span>
         					<% end %>
         				</td>
        　</tr>
         </tbody>
         </table>
        <%=link_to edit_admin_item_path(@item.id), class:"btn btn-sm btn-success" do %>
        編集する
        <%end%>
       </div>
  </div>
</div>