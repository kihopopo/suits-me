<div class = "container">
     <div class = "row">
         <div class = "col-3">
             <h4>商品編集</h4>
         </div>
     </div>
 </div>

 <div class="container">
  <div class="row">
    <div class="col-md-10 px-sm-0 mx-auto">
　　　　<%= form_with model: @item, url: admin_item_path, method: :patch do |f| %>
　　　　  <div class="form-group">
            <label for="item_name">商品画像</label>
　　　　  　<%= f.file_field :image,class:"form-control-file item_image", id:"item_image", accept:"image/*" %>
　　　　  </div>

          <div class="form-group">
            <label for="item_name">商品名　　　　</label>
            <%= f.text_field :name %>
          </div>

  　　      <div class="form-group">
             <label for="item_introduction">商品説明　　　</label>
             <%= f.text_area :introduction %>
          </div>

          <div class="form-group">
             <label for="item_tag_ids">タグ　　　　　</label>
              <%= collection_check_boxes(:item, :tag_ids, Tag.all, :id, :name) do |b| %>
            　 <%= b.label { b.check_box + b.text } %>
            　<% end %>
          </div>

          <div class="form-group">
             <label for="item_introduction">税抜価格　　　</label>
             <%= f.text_field :price, :placeholder =>"1000" %>円
          </div>

          <div class="form-group">
            <%= f.label :販売ステータス %>
            <%= f.radio_button :is_active, true %>
            <%= f.label :is_active, '販売中', value: true %>
            <%= f.radio_button :is_active, false %>
            <%= f.label :is_active, '販売停止中', value: false %>
          </div>

          <div class="center-block">
            <%= f.submit "変更を保存",class:"btn btn-success" %>
          </div>
        <% end %>
      </form>
    </div>
  </div>
</div>