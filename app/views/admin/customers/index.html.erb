<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h4>会員一覧</h4>
     <table class="table table-hover table-inverse">
    　 <thead>
        <tr class="table-secondary">
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
        <% @customers.each do |customer| %>
         <tr>
           <td>
            <%= customer.id %>
           </td>
           <td>
            <%= link_to customer.full_name,admin_customer_path(customer.id) %>
           </td>
           <td>
            <%= customer.email %>
           </td>
           <td>
            <%= customer.is_deleted  %>
           </td>
         </tr>
        <%end%>
       </thead>
     </table>
    </div>
  </div>
</div>



