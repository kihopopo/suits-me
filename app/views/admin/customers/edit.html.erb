<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-9 px-5 px-sm-0 mx-auto">
      <%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>
        <h5><%= @customer.full_name %>さんの会員情報編集</h5>
   
　　　　  <table class="table">
　　　　   <tbody>
　　　　    <tr>
　　　　      <td>会員ID</td>
　　　　      <td><%= @customer.id %></td>
　　　　    </tr>
　　　　    <tr>
　　　　      <td>氏名</td>
　　　　      <td><%= f.text_field :first_name %></td>
　　　　      <td><%= f.text_field :last_name %></td>
　　　　    </tr>
　　　　    <tr>
　　　　      <td>フリガナ</td>
　　　　      <td><%= f.text_field :first_name_kana %></td>
　　　　      <td><%= f.text_field :last_name_kana %></td>
　　　　    </tr>
　　　　    <tr>
　　　　      <td>郵便番号</td>
　　　　      <td><%= f.text_field :postal_code %></td>
　　　　      <td></td>
　　　　    </tr>
　　　　    <tr>
　　　　      <td>住所</td>
　　　　      <td colspan="2"><%= f.text_field :address,size: "60" %></td>
　　　　    </tr>
　　　　    <tr>
　　　　      <td>電話番号</td>
　　　　      <td><%= f.text_field :telephone_number %></td>
　　　　      <td></td>
　　　　    </tr>
　　　　    <tr>
　　　　      <td>メールアドレス</td>
　　　　      <td><%= f.text_field :email %></td>
　　　　      <td></td>
　　　　    </tr>
　　　　    <tr>
　　　　      <td>会員ステータス</td>
　　　　      <td>
　　　　        <%= f.radio_button :is_deleted, '有効' %>
                <%= f.label :is_deleted, '有効', value: 1 %>
                <%= f.radio_button :is_deleted, '退会' %>
                <%= f.label :is_deleted, '退会', value: 0 %>
             </td>
             <td></td>
　　　　    </tr>
　　　　   </tbody>
　　　　  </table>
　　　　  
          <div class="center-block">
            <%= f.submit "変更を保存",class:"btn btn-success" %>
          </div>
        <% end %>
    </div>
  </div>
</div>